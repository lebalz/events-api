{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2022",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "typeRoots": [
      "./src/types",
      "./node_modules/@types/",
      "./src/@types/"
    ],

    "types": [
      "node",
      "jest",
      "express"
    ],

    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "exclude": ["bin"],
}