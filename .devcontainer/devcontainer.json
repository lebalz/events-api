// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node-postgres
{
	"name": "Events-API",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/rails/devcontainer/features/postgres-client": {
			"version": "17"
		},
		"ghcr.io/code-fabrik/features/dokku-cli:latest": {},
	    "ghcr.io/georglauterbach/dev-container-features/cache-vscode-extensions:0": {}
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or with the host.
	"forwardPorts": [3002, 5432],
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "yarn install",
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"Prisma.prisma",
				"mhutchie.git-graph",
				"dbaeumer.vscode-eslint",
				"motivesoft.vscode-uuid-generator",
		        "dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"ms-ossdata.vscode-pgsql",
				"GitHub.copilot",
				"GitHub.vscode-pull-request-github"
			],
			"settings": {
				"pgsql.serverGroups": [
					{
						"name": "Servers",
						"id": "9B1DBC9B-951B-4E3D-AC65-7D4CDE1773A0",
						"isDefault": true
					}
				],
				"pgsql.connections": [
					{
						"id": "30A5E0E0-9901-4311-913B-98F78549DD64",
						"groupId": "9B1DBC9B-951B-4E3D-AC65-7D4CDE1773A0",
						"authenticationType": "SqlLogin",
						"connectTimeout": 15,
						"applicationName": "vscode-pgsql",
						"clientEncoding": "utf8",
						"sslmode": "disable",
						"server": "db",
						"user": "postgres",
						"port": "5432",
						"database": "events_api",
						"password": "postgres",
						"savePassword": true,
						"profileName": "TeachingAPI",
						"copilotAccessMode": "ro",
						"expiresOn": 0
					}
				]
			}
		}
	},
	"remoteEnv": {
		"DATABASE_URL": "postgresql://postgres:postgres@db:5432/events_api?schema=public"
	}
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}